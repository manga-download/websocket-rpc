{
  "name": "websocket-rpc",
  "description": "A typesafe RPC implementation for WebSockets",
  "version": "1.1.2",
  "homepage": "https://www.npmjs.com/package/websocket-rpc",
  "repository": {
    "type": "git",
    "url": "https://github.com/manga-download/websocket-rpc"
  },
  "files": [
    "/dist"
  ],
  "type": "module",
  "main": "./dist/cjs/_index.js",
  "module": "./dist/mjs/_index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/_index.js",
      "require": "./dist/cjs/_index.js"
    },
    "./server": {
      "import": "./dist/mjs/server.js",
      "require": "./dist/cjs/server.js"
    },
    "./client": {
      "import": "./dist/mjs/client.js",
      "require": "./dist/cjs/client.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "scripts": {
    "build": "rm -r -f ./dist && tsc -p ./tsconfig-mjs.json && tsc -p ./tsconfig-cjs.json",
    "test:unit": "npm run build && jest --runInBand --config='./jest.unit.js'",
    "test:integration": "npm run build && jest --detectOpenHandles --runInBand --config='./jest.integration.js'",
    "deploy:dry": "npm run test:unit && npm run test:integration && npm publish --dry-run",
    "deploy:production": "npm run test:unit && npm run test:integration && npm publish && npm version patch --no-git-tag-version"
  }
}
